@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Checkout</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
</head>
<body>
<form method="post" action="@Url.Action("ValidateData", "Payment")">
    <fieldset>
        <legend>Add Checkout</legend>
        <div>
            <label for="Name">Name:</label>
            <input type="text" name="Name" value="" required="required"/>
        </div>
        <div>
            <label for="Email">Email:</label>
            <input type="email" name="Email" value="" required="required"/>
        </div>
        <div>
            <label for="Phone number">Phone number:</label>
            <input type="text" name="Phone number" value="" />
        </div>
        <h3>Billing Address </h3>
        <div>
            <label for="Country">Country:</label>
            <input type="text" name="Country" value="" required="required"/>
            <div>
                <label for="Zipcode">Zipcode:</label>
                <input type="text" name="Zipcode" value="" required="required"/>
            </div>
            <div>
                <label for="City">City Name:</label>
                <input type="text" name="City" value="" required="required"/>
            </div>
            <div>
                <label for="Street">Street Name:</label>
                <input type="text" name="Street" value="" required="required"/>
            </div>
            <div>
                <label for="House">House Number:</label>
                <input type="text" name="House" value="" required="required"/>
            </div>
        </div>
         <p id="shiptobilling" class="form-row">
            Same as Shipping <input type="checkbox" onclick="SetBilling(this.checked);" /> 
        </p>
        <div id="deliveryaddres" style="display:block;">
            <h3>Shipping  Address </h3>
            <div>
                <label for="Country">Country:</label>
                <input type="text" name="Country" value="" required="required"/>
            </div>
            <div>
                <label for="Zipcode">Zipcode:</label>
                <input type="text" name="Zipcode" value="" required="required"/>
            </div>
            <div>
                <label for="City">City Name:</label>
                <input type="text" name="City" value="" required="required"/>
            </div>
            <div>
                <label for="Street">Street Name:</label>
                <input type="text" name="Street" value="" required="required"/>
            </div>
            <div>
                <label for="House">House Number:</label>
                <input type="text" name="House" value="" required="required"/>
            </div>
        </div>
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
        </div>
    </fieldset>
</form>
</body>
</html>